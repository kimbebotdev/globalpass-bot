{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: login (main.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/main.py",
      "python": "${workspaceFolder}/env/bin/python",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: scrape airlines (scrape_airlines.py)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scrape_airlines.py",
      "python": "${workspaceFolder}/env/bin/python",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "args": [
        "--headed",
        "--airport-term",
        "a"
      ]
    }
  ]
}
